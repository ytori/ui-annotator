{
	"name": "ui-annotator",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"typescript": "^5"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"knip": "knip",
		"knip:fix": "knip --fix",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"knip": "^5.76.3",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.3",
		"typescript": "catalog:"
	},
	"packageManager": "bun@1.3.5",
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,css}": "biome check --write --no-errors-on-unmatched"
	}
}
