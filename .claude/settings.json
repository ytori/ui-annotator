{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit",
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && bun run check 2>&1 | tail -30",
						"timeout": 60000
					},
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && bun run check-types 2>&1 | tail -30",
						"timeout": 60000
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && bun run build 2>&1 | tail -30",
						"timeout": 120000
					},
					{
						"type": "command",
						"command": "cd \"$CLAUDE_PROJECT_DIR\" && bun run knip:fix 2>&1 | tail -50",
						"timeout": 60000
					}
				]
			}
		]
	}
}
